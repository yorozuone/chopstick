{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <div class="page-header">
        <h1>タグ削除</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/tag/summary') }}">タグ一覧</a></li>
        <li class="active">タグ削除</li>
    </ol>

    <form action="{{ cs_url('/admin/tag/delete/update') }}" method="post">
        <div class="panel panel-default">
            <div class="panel-heading">タグの削除</div>
            <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label">タグ名</label>
                        <div>
                            <p class="form-control-static">{{ dset_tag_values.caption }}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger" value="削除">
                        <a href="{{ cs_url('/admin/tag/summary') }}" class="btn btn-default">戻る</a>
                    </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="tag_id" value="{{ dset_tag_values.tag_id }}">
    </form>

{% endblock %}

{% extends "/controller/admin/default.twig" %}

{% block area_body %}

        <div class="mx-auto" style="width: 320px;">
            <div class="card">
                <div class="card-header">ログイン</div>
                <div class="card-body">
                    {% for error_message in error_messages %}
                        {% if error_message != '' %}
                            <div class="alert alert-danger" role="alert">{{ error_message }}</div>
                        {% endif %}
                    {% endfor %}
                    <form action="{{ cs_url('/admin/auth/login/update') }}" method="post">
                        <div class="form-group">
                            <label for="username">ユーザー名</label>
                            <input type="text" value="{{ values.username }}" class="form-control" id="username" name="username" placeholder="ユーザー名">
                            {% if error_messages.username != '' %}
                                <p class="help-block">
                                    <div class="alert alert-danger" role="alert">{{ error_messages.username }}</div>
                                </p>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="password">パスワード</label>
                            <input type="password" value="{{ values.password }}" class="form-control" id="password" name="password" placeholder="パスワード">
                            {% if error_messages.password != '' %}
                                <p class="help-block">
                                    <div class="alert alert-danger" role="alert">{{ error_messages.password }}</div>
                                </p>
                            {% endif %}
                        </div>
                        <input type="submit" class="btn btn-primary" value="ログイン">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                    </form>
                </div>
            </div>
        </div>

{% endblock %}

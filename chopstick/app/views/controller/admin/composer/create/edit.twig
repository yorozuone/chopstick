{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        コンポーザー登録
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/composer/summary') }}">コンポーザー一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">コンポーザー登録</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/composer/create/update') }}" method="post">
        <div class="card">
            <div class="card-header">コンポーザー登録</div>
            <div class="card-body">
                {% for dset_composer_error_message in dset_composer_error_messages %}
                    {% if dset_composer_error_message != '' %}
                        <div class="alert alert-danger" role="alert">{{ dset_composer_error_message }}</div>
                    {% endif %}
                {% endfor %}
                <div class="form-group">
                    <label for="title">コンポーザー・キー</label>
                    <input type="text" value="{{ dset_composer_values.composer_key }}" class="form-control" id="composer_key" name="composer_key" placeholder="コンポーザー・キー">
                    {% if dset_composer_error_messages.composer_key != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_composer_error_messages.composer_key }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="title">コンポーザー名</label>
                    <input type="text" value="{{ dset_composer_values.caption }}" class="form-control" id="caption" name="caption" placeholder="コンポーザー名">
                    {% if dset_composer_error_messages.caption != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_composer_error_messages.caption }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="title">コンポーザー・テンプレート</label>
                    <textarea class="form-control" id="composer_template" name="composer_template" placeholder="コンポーザー・テンプレート" rows="5">{{ dset_composer_values.composer_template }}</textarea>
                    {% if dset_composer_error_messages.composer_template != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_composer_error_messages.composer_template }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="登録">
                    <a href="{{ cs_url('/admin/composer/summary') }}" class="btn btn-outline-info">戻る</a>
                </div>
            </div>
        <div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
    </form>

{% endblock %}
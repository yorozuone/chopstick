{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        コンポーザー削除
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/composer/summary') }}">コンポーザー一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">コンポーザー削除</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/composer/delete/update') }}" method="post">
        <div class="card">
            <div class="card-header">コンポーザーの削除</div>
            <div class="card-body">
                <div class="form-group">
                    <label class="control-label">コンポーザー・キー</label>
                    <div>
                        <p class="form-control-static">{{ dset_composer_values.composer_key }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">コンポーザー名</label>
                    <div>
                        <p class="form-control-static">{{ dset_composer_values.caption }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">コンポーザー・テンプレート</label>
                    <div>
                        <p class="form-control-static">{{ dset_composer_values.composer_template|nl2br }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="削除">
                    <a href="{{ cs_url('/admin/composer/summary') }}" class="btn btn-outline-info">戻る</a>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="composer_key" value="{{ dset_composer_values.composer_key }}">
    </form>

{% endblock %}

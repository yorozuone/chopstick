{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        スタック・グループ削除
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/stackgroup/summary', [ dset_stack_values.stackgroup_id] )}}">スタック・グループ一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">スタック・グループ削除</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/stackgroup/delete/update') }}" method="post">
        <div class="card">
            <div class="card-header">スタック・グループの削除</div>
            <div class="card-body">
                <div class="form-group">
                    <label class="control-label">スタック・グループ名</label>
                    <div>
                        <p class="form-control-static">{{ dset_stackgroup_values.caption }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="削除">
                    <a href="{{ cs_url('/admin/stackgroup/summary') }}" class="btn btn-outline-info">戻る</a>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="stackgroup_id" value="{{ dset_stackgroup_values.stackgroup_id }}">
    </form>

{% endblock %}

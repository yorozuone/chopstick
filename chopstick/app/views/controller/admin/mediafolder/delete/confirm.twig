{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <div class="page-header">
        <h1>フォルダ削除</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/mediafolder/summary') }}">フォルダ一覧</a></li>
        <li class="active">フォルダ削除</li>
    </ol>

    <form action="{{ cs_url('/admin/mediafolder/delete/update') }}" method="post">
        <div class="panel panel-default">
            <div class="panel-heading">フォルダの削除</div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label">フォルダ名</label>
                    <div>
                        <p class="form-control-static">{{ dset_folder_values.caption }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="削除">
                    <a href="{{ cs_url('/admin/mediafolder/summary') }}" class="btn btn-default">戻る</a>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="mediafolder_id" value="{{ dset_folder_values.mediafolder_id }}">
    </form>

{% endblock %}

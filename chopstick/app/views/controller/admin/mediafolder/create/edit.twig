{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <div class="page-header">
        <h1>フォルダ登録</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/mediafolder/summary') }}">フォルダ一覧</a></li>
        <li class="active">フォルダ登録</li>
    </ol>

    <form action="{{ cs_url('/admin/mediafolder/create/update') }}" method="post">
        <div class="panel panel-default">
            <div class="panel-heading">フォルダ登録</div>
            <div class="panel-body">
                {% for dset_folder_error_message in dset_folder_error_messages %}
                    {% if dset_folder_error_message != '' %}
                        <div class="alert alert-danger" role="alert">{{ dset_folder_error_message }}</div>
                    {% endif %}
                {% endfor %}
                <div class="form-group">
                    <label for="title">フォルダ名</label>
                    <input type="text" value="{{ dset_folder_values.caption }}" class="form-control" id="caption" name="caption" placeholder="フォルダ名">
                    {% if dset_folder_error_messages.caption != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_folder_error_messages.caption }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="登録">
                    <a href="{{ cs_url('/admin/mediafolder/summary') }}" class="btn btn-default">戻る</a>
                </div>
            </div>
        <div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
    </form>

{% endblock %}
{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        メディア・フォルダ一覧
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item active" aria-current="page">フォルダ一覧</li>
        </ol>
    </nav>

    <div>
        <a href="{{ cs_url('/admin/mediafolder/create') }}" class="btn btn-success">フォルダ登録</a>
    </div>

    <br>

    {% if drec_folder|length == 0 %}
        <div class="alert alert-success" role="alert">フォルダが登録されていません。</div>
    {% else %}
        <p class="h4">フォルダ一覧</p>
        <div class="table-responsive">
            <table id="folder_sortable" class="table table-striped">
                <thead>
                    <tr>
                        <th nowrap>フォルダ名</th>
                        <th nowrap>更新日時</th>
                        <th nowrap></th>
                    </tr>
                </thead>
                <tbody>
                    {% for v in drec_folder %}
                        <tr folder_id="{{ v.mediafolder_id }}">
                            <td nowrap>
                                <a href="{{ cs_url('/admin/media/summary', [v.mediafolder_id]) }}" class="btn btn-info">ファイル一覧</a>
                                <a href="{{ cs_url('/admin/media/create', [v.mediafolder_id]) }}" class="btn btn-primary">登録</a>
                                {{ v.caption }}
                            </td>
                            <td nowrap>
                                {{ v.updated_at | date('Y/m/d H:i', "Asia/Tokyo") }}
                            </td>
                            <td nowrap style="text-align: right;">
                                <a href="{{ cs_url('/admin/mediafolder/edit', [v.mediafolder_id]) }}" class="btn btn-primary">編集</a>
                                <a href="{{ cs_url('/admin/mediafolder/delete', [v.mediafolder_id]) }}" class="btn btn-danger">削除</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}

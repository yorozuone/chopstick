{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        コンポーザー・ブロック削除
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/composer_block/summary', [ dset_composer_block_values.composer_key ]) }}">コンポーザー・ブロック一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">コンポーザー・ブロック削除</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/composer_block/delete/update') }}" method="post">
        <div class="card">
            <div class="card-header">コンポーザー・ブロックの削除</div>
            <div class="card-body">
                <div class="form-group">
                    <label class="control-label">コンポーザー・キー</label>
                    <div>
                        <p class="form-control-static">{{ dset_composer_block_values.composer_key }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">コンポーザー・ブロック・キー</label>
                    <div>
                        <p class="form-control-static">{{ dset_composer_block_values.composer_block_key }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">ブロック・キー</label>
                    <div>
                        <p class="form-control-static">{{ dset_composer_block_values.block_key }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">ブロック名</label>
                    <div>
                        <p class="form-control-static">{{ dset_composer_block_values.caption }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">説明</label>
                    <div>
                        <p class="form-control-static">{{ dset_composer_block_values.description }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="削除">
                    <a href="{{ cs_url('/admin/composer_block/summary', [ dset_composer_block_values.composer_key ]) }}" class="btn btn-outline-info">戻る</a>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="composer_key" value="{{ dset_composer_block_values.composer_key }}">
        <input type="hidden" name="composer_block_key" value="{{ dset_composer_block_values.composer_block_key }}">
    </form>

{% endblock %}

{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <div class="page-header">
        <h1>コンポーザー・ブロック</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/composer/summary') }}">コンポーザー一覧 ({{ dset_composer_values.composer_key }})</a></li>
        <li><a href="{{ cs_url('admin/composer_block/summary', [ dset_composer_block_values.composer_key ]) }}">コンポーザー・ブロック一覧</a></li>
        <li class="active">コンポーザー・ブロック登録</li>
    </ol>

    <form action="{{ cs_url('/admin/composer_block/create/update') }}" method="post">
        <div class="panel panel-default">
            <div class="panel-heading">コンポーザー・ブロック登録</div>
            <div class="panel-body">
                {% for dset_composer_block_error_message in dset_composer_block_error_messages %}
                    {% if dset_composer_block_error_message != '' %}
                        <div class="alert alert-danger" role="alert">{{ dset_composer_block_error_message }}</div>
                    {% endif %}
                {% endfor %}
                <div class="form-group">
                    <label for="title">コンポーザー・ブロック・キー</label>
                    <input type="text" value="{{ dset_composer_block_values.composer_block_key }}" class="form-control" id="composer_block_key" name="composer_block_key" placeholder="コンポーザー・ブロック・キー">
                    {% if dset_composer_block_error_messages.composer_block_key != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_composer_block_error_messages.composer_block_key }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="parent_page_id">ブロック</label>
                    <select class="form-control" id="block_key" name="block_key">
                        {% for obj in drec_block %}
                            <option value="{{ obj.block_key }}"{% if obj.block_key == dset_composer_block_values.block_key %} selected{% endif %}>{{ obj.caption }}</option>
                        {% endfor %}
                    </select>
                    {% if dset_composer_block_error_messages.block_key != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_composer_block_error_messages.block_key }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="title">ブロック名</label>
                    <input type="text" value="{{ dset_composer_block_values.caption }}" class="form-control" id="caption" name="caption" placeholder="コンポーザー名">
                    {% if dset_composer_block_error_messages.caption != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_composer_block_error_messages.caption }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="title">説明</label>
                    <input type="text" value="{{ dset_composer_block_values.description }}" class="form-control" id="description" name="description" placeholder="説明">
                    {% if dset_composer_block_error_messages.description != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_composer_block_error_messages.description }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="登録">
                    <a href="{{ cs_url('/admin/composer_block/summary', [dset_composer_block_values.composer_key]) }}" class="btn btn-default">戻る</a>
                </div>
            </div>
        <div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="composer_key" value="{{ dset_composer_block_values.composer_key }}">
    </form>

{% endblock %}
{% extends "/controller/admin/default.twig" %}

{% block area_body_tail %}
<script type="text/javascript">
    $(function() {
        $('#block_sortable tbody').sortable({
            items: 'tr',
            handle: '.block_sortable_handle',
            cursor: 'move',
            opacity: 0.5,
            stop: function (event, ui)
            {
                var params = [];
                $("#block_sortable tbody tr").each(function() {
                    params.push($(this).attr('block_key'));
                });
                $.ajax({
                    url: "{{ cs_url('admin/composer_block/summary/sort/') }}" + params.join('/')
                });
            }
        });
    });
</script>
{% endblock %}

{% block area_body %}

    <div class="page-header">
        <h1>コンポーザー・ブロック一覧</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/composer/summary') }}">コンポーザー一覧 ({{ dset_composer_values.composer_key }})</a></li>
        <li class="active">コンポーザー・ブロック一覧</li>
    </ol>

    <div>
        <a href="{{ cs_url('/admin/composer_block/create', [ composer_key ]) }}" class="btn btn-success">コンポーザー・ブロック登録</a>
    </div>

    <br>

    {% if drec_composer_block|length == 0 %}
        <div class="alert alert-success" role="alert">コンポーザー・ブロックが登録されていません。</div>
    {% else %}
        <div class="panel panel-default">
            <div class="panel-heading">コンポーザー・ブロック一覧</div>
            <table id="block_sortable" class="table table-striped">
                <thead>
                    <tr>
                        <th style="width: 12px;"></th>
                        <th>ブロック・キー</th>
                        <th>ブロック名</th>
                        <th nowrap style="width: 200px;">更新日時</th>
                        <th nowrap style="width: 120px;"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for v in drec_composer_block %}
                        <tr block_key="{{ v.block_key }}">
                            <td nowrap>
                                <span class="glyphicon glyphicon-menu-hamburger block_sortable_handle" aria-hidden="true" style="cursor:move"></span>
                            </td>
                            <td>
                                {{ v.block_key }}
                            </td>
                            <td>
                                {{ v.caption }}
                            </td>
                            <td>
                                {{ v.updated_at | date('Y/m/d H:i:s', "Asia/Tokyo") }}
                            </td>
                            <td style="text-align: right;">
                                <a href="{{ cs_url('/admin/composer_block/edit', [v.composer_key, v.composer_block_key]) }}" class="btn btn-xs btn-primary">編集</a>
                                <a href="{{ cs_url('/admin/composer_block/delete', [v.composer_key, v.composer_block_key]) }}" class="btn btn-xs btn-danger">削除</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}

{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <div class="page-header">
        <h1>ユーザー削除</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/user/summary') }}">ユーザー一覧</a></li>
        <li class="active">ユーザー削除</li>
    </ol>

    <div class="panel panel-default">
        <div class="panel-heading">ユーザー情報</div>
        <div class="panel-body">
            <form action="{{ cs_url('/admin/user/delete/update') }}" method="post">
                <div class="form-group">
                    <label class="control-label">ユーザー名</label>
                    <div>
                        <p class="form-control-static">{{ dset_user_values.username }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">所属グループ</label>
                    <div>
                        <p class="form-control-static">{{ dset_user_values.group_caption }}</p>
                    </div>
                </div>
                <input type="submit" class="btn btn-danger" value="削除">
                <a href="{{ cs_url('/admin/user/summary') }}" class="btn btn-default">戻る</a>
                <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                <input type="hidden" name="user_id" value="{{ dset_user_values.user_id }}">
            </form>
        </div>
    </div>

{% endblock %}

{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <div class="page-header">
        <h1>カテゴリ削除</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/category/summary', [dset_category_values.parent_page_id]) }}">カテゴリ一覧</a></li>
        <li class="active">カテゴリ削除</li>
    </ol>

    <form action="{{ cs_url('/admin/category/delete/update') }}" method="post">
        <div class="panel panel-default">
            <div class="panel-heading">ページの削除</div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label">親カテゴリ</label>
                    <div>
                        <p class="form-control-static">{{ dset_category_values.parent_category_caption }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">カテゴリ名</label>
                    <div>
                        <p class="form-control-static">{{ dset_category_values.caption }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">パーマネント名</label>
                    <div>
                        <p class="form-control-static">{{ dset_category_values.permanent_name }}</p>
                    </div>
                </div>
                {% if input.number_of_child_category == 0 %}
                    <input type="submit" class="btn btn-danger" value="削除">
                {% else %}
                    <span class="btn btn-default">削除</span>
                {% endif %}
                <a href="{{ cs_url('/admin/category/summary', [dset_category_values.parent_category_id]) }}" class="btn btn-default">戻る</a>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="category_id" value="{{ dset_category_values.category_id }}">
    </form>

{% endblock %}

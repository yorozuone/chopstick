{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        カテゴリ登録
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/category/summary', [dset_category_values.parent_page_id]) }}">カテゴリ一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">カテゴリ登録</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/category/create/update') }}" method="post">
        <div class="card">
            <div class="card-header">カテゴリ登録</div>
            <div class="card-body">
                {% for dset_category_error_message in dset_category_error_messages %}
                    {% if dset_category_error_message != '' %}
                        <div class="alert alert-danger" role="alert">{{ dset_category_error_message }}</div>
                    {% endif %}
                {% endfor %}
                <div class="form-group">
                    <label for="parent_category_id">親カテゴリ</label>
                    <select class="form-control" id="parent_category_id" name="parent_category_id">
                        {% for obj in rs_category_tree %}
                            <option value="{{ obj.category_id }}"{% if obj.category_id == dset_category_values.parent_category_id %} selected{% endif %}>{{ obj.tree_caption }}</option>
                        {% endfor %}
                    </select>
                    {% if dset_category_error_messages.parent_category_id != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_category_error_messages.parent_category_id }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="caption">カテゴリ名</label>
                    <input type="text" value="{{ dset_category_values.caption }}" class="form-control" id="caption" name="caption" placeholder="カテゴリ名">
                    {% if dset_category_error_messages.caption != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_category_error_messages.caption }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="permanent_name">パーマネント名</label>
                    <input type="text" value="{{ dset_category_values.permanent_name }}" class="form-control" id="permanent_name" name="permanent_name" placeholder="パーマネント名">
                    {% if dset_category_error_messages.permanent_name != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_category_error_messages.permanent_name }}</div>
                        </p>
                    {% endif %}
                </div>
                <input type="submit" class="btn btn-primary" value="登録">
                <a href="{{ cs_url('/admin/category/summary', [dset_category_values.parent_category_id]) }}" class="btn btn-outline-info">戻る</a>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
    </form>

{% endblock %}

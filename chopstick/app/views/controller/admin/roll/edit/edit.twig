{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        ロール編集
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/roll/summary') }}">ロール一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">ロール編集</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/roll/edit/update') }}" method="post">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">ロール編集</div>
                    <div class="card-body">
                        {% for error_message in dset_roll_error_messages %}
                            {% if error_message != '' %}
                                <div class="alert alert-danger" role="alert">{{ error_message }}</div>
                            {% endif %}
                        {% endfor %}
                        <div class="form-group">
                            <label class="control-label">ロール・キー</label>
                            <div>
                                <p class="form-control-static">{{ dset_roll_values.roll_key }}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="caption">見出し</label>
                            <input type="text" value="{{ dset_roll_values.caption }}" class="form-control" id="caption" name="caption" placeholder="見出し">
                            {% if dset_roll_error_messages.caption != '' %}
                                <p class="help-block">
                                    <div class="alert alert-danger" role="alert">{{ dset_roll_error_messages.caption }}</div>
                                </p>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="description">説明</label>
                            <input type="text" value="{{ dset_roll_values.description }}" class="form-control" id="description" name="description" placeholder="説明">
                            {% if dset_roll_error_messages.description != '' %}
                                <p class="help-block">
                                    <div class="alert alert-danger" role="alert">{{ dset_roll_error_messages.description }}</div>
                                </p>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="更新">
                            <a href="{{ cs_url('/admin/roll/summary') }}" class="btn btn-outline-info">戻る</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="roll_key" value="{{ dset_roll_values.roll_key }}">
{% endblock %}

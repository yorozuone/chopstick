{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        ブロック登録
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/block/summary') }}">ブロック一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">ブロック登録</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/block/create/update') }}" method="post">
        <div class="card">
            <div class="card-header">ブロック登録</div>
            <div class="card-body">
                {% for error_message in error_messages %}
                    {% if error_message != '' %}
                        <div class="alert alert-danger" role="alert">{{ error_message }}</div>
                    {% endif %}
                {% endfor %}
                <div class="form-group">
                    <label class="control-label caption">ブロック名</label>
                    <div>
                        <p class="form-control-static">{{ values.name }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label caption">説明</label>
                    <div>
                        <p class="form-control-static">{{ values.description }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label caption">バージョン</label>
                    <div>
                        <p class="form-control-static">{{ values.version }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="登録">
                    <a href="{{ cs_url('/admin/block/summary') }}" class="btn btn-outline-info">戻る</a>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" id="block_key" name="block_key" value="{{ values.block_key }}">
    </form>

{% endblock %}
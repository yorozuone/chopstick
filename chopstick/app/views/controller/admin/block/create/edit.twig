{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <div class="page-header">
        <h1>ブロック登録</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/block/summary') }}">ブロック一覧</a></li>
        <li class="active">ブロック登録</li>
    </ol>

    <form action="{{ cs_url('/admin/block/create/update') }}" method="post">
        <div class="panel panel-default">
            <div class="panel-heading">ブロック登録</div>
            <div class="panel-body">
                {% for dset_block_error_message in dset_block_error_messages %}
                    {% if dset_block_error_message != '' %}
                        <div class="alert alert-danger" role="alert">{{ dset_block_error_message }}</div>
                    {% endif %}
                {% endfor %}
                <div class="form-group">
                    <label class="control-label">ブロック名</label>
                    <div>
                        <p class="form-control-static">{{ dset_block_values.name }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">説明</label>
                    <div>
                        <p class="form-control-static">{{ dset_block_values.description }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">バージョン</label>
                    <div>
                        <p class="form-control-static">{{ dset_block_values.version }}</p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="登録">
                <a href="{{ cs_url('/admin/block/summary') }}" class="btn btn-default">戻る</a>
            </div>
        <div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" id="block_key" name="block_key" value="{{ dset_block_values.block_key }}">
    </form>

{% endblock %}
{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        ブロック編集
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/block/summary') }}">ブロック一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">ブロック編集</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/block/edit/update') }}" method="post">
        <div class="card">
            <div class="card-header">ブロックの編集</div>
            <div class="card-body">
                {% for dset_block_error_message in dset_block_error_messages %}
                    {% if dset_block_error_message != '' %}
                        <div class="alert alert-danger" role="alert">{{ dset_block_error_message }}</div>
                    {% endif %}
                {% endfor %}
                <div class="form-group">
                    <label for="caption">ブロック名</label>
                    <input type="text" value="{{ dset_block_values.caption }}" class="form-control" id="caption" name="caption" placeholder="ブロック名">
                    {% if dset_block_error_messages.caption != '' %}
                        <p class="help-block">
                            <div class="alert alert-danger" role="alert">{{ dset_block_error_messages.caption }}</div>
                        </p>
                    {% endif %}
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="更新">
                    <a href="{{ cs_url('/admin/block/summary') }}" class="btn btn-outline-info">戻る</a>
                </div>
            </div>
        <div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" id="block_key" name="block_key" value="{{ dset_block_values.block_key }}">
    </form>

{% endblock %}

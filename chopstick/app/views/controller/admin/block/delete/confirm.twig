{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <div class="page-header">
        <h1>ブロック削除</h1>
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ cs_url('admin/menu') }}">Home</a></li>
        <li><a href="{{ cs_url('admin/block/summary') }}">ブロック一覧</a></li>
        <li class="active">ブロック削除</li>
    </ol>

    <form action="{{ cs_url('/admin/block/delete/update') }}" method="post">
        <div class="panel panel-default">
            <div class="panel-heading">ブロックの削除</div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="form-group">
                        <label class="control-label">ブロック名</label>
                        <div>
                            <p class="form-control-static">{{ dset_block_values.name }}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">説明</label>
                        <div>
                            <p class="form-control-static">{{ dset_block_values.description }}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">インストール・バージョン</label>
                        <div>
                            <p class="form-control-static">{{ dset_block_values.install_version }}</p>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="削除">
                    <a href="{{ cs_url('/admin/block/summary') }}" class="btn btn-default">戻る</a>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="block_key" value="{{ dset_block_values.block_key }}">
    </form>

{% endblock %}

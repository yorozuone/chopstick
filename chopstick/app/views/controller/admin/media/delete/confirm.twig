{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        ファイル削除
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/media/summary', [dset_media_values.mediafolder_id]) }}">ファイル一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">ファイル削除</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/media/delete/update') }}" method="post">
        <div class="card">
            <div class="card-header">ファイルの削除</div>
            <div class="card-body">
                <div class="form-group">
                    <label class="control-label">id</label>
                    <div>
                        <p class="form-control-static">{{ dset_media_values.media_id }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">フォルダー名</label>
                    <div>
                        <p class="form-control-static">{{ dset_media_values.mediafolder_caption }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">サムネイル</label>
                    <div>
                        <p class="form-control-static"><img src="{{ cs_url('/cms_media/thumbnail', [dset_media_values.media_id]) }}"></p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">ファイル名</label>
                    <div>
                        <p class="form-control-static">{{ dset_media_values.file_name }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">mime_type</label>
                    <div>
                        <p class="form-control-static">{{ dset_media_values.mime_type }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">説明</label>
                    <div>
                        <p class="form-control-static">{{ dset_media_values.description }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="削除">
                    <a href="{{ cs_url('/admin/media/summary', [ dset_media_values.mediafolder_id ]) }}" class="btn btn-outline-info">戻る</a>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="media_id" value="{{ dset_media_values.media_id }}">
    </form>

{% endblock %}

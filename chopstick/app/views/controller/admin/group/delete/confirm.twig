{% extends "/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        グループ削除
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('admin/group/summary') }}">グループ一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">グループ削除</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/admin/group/delete/update') }}" method="post">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">グループ削除</div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="control-label caption">グループ・キー</label>
                            <div>
                                <p class="form-control-static">{{ values.group_key }}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label caption">見出し</label>
                            <div>
                                {{ values.caption }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label caption">説明</label>
                            <div>
                                <p class="form-control-static">{{ values.description }}</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label caption">ロール</label>
                            <div>
                                <p class="form-control-static">
                                {% for v in rs_roll %}
                                    {% if v.checked == 1 %}
                                        {{ v.caption }} ( {{ v.roll_key }} )<br>
                                    {% endif %}
                                {% endfor %}
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-danger" value="削除">
                            <a href="{{ cs_url('/admin/group/summary', [ values.group_key ]) }}" class="btn btn-outline-info">戻る</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="group_key" value="{{ values.group_key }}">
    </form>

{% endblock %}

{% extends "/csroot/controller/admin/default.twig" %}

{% block area_body %}

    <h1 class="display-4">
        課題削除
    </h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ cs_url('/csroot/admin/menu') }}">メニュー</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('//cspman/project/summary') }}">プロジェクト一覧</a></li>
            <li class="breadcrumb-item"><a href="{{ cs_url('//cspman/project_task/summary', [ values.project_id]) }}">課題一覧</a></li>
            <li class="breadcrumb-item active" aria-current="page">課題詳細</li>
        </ol>
    </nav>

    <form action="{{ cs_url('/cscms/admin/stack/delete/update') }}" method="post">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">{{ values.title }}</div>
                    <div class="card-body">
                        <div class="form-group">
                            <div>
                                {{ values.description|nl2br }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <a href="#" class="btn btn-primary">コメント登録</a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">コメント</div>
                </div>
            </div>
        </div>
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
    </form>

{% endblock %}
